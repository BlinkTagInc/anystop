<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/layout_root" android:orientation="horizontal"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:padding="5px">
	<ImageView android:id="@+id/image" 
		android:layout_width="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_height="24pt" 
		android:layout_marginRight="10dp" />
		
	<EditText android:id="@+id/locatortext" 
		android:layout_width="fill_parent"
		android:layout_margin="4px"
		android:layout_marginTop="0px"
		android:layout_height="wrap_content" 
		android:textColor="#000"
		android:layout_toRightOf="@id/image" />
		
	<TextView android:id="@+id/locatorgeo"
		android:layout_below="@id/locatortext"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:padding="5px"
		android:text="Punch in an address, intersection, or something else describing your location."
		android:gravity="center_horizontal"
		/>

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/button_lin_container" android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:paddingTop="8px"
		android:padding="0px" android:layout_below="@id/locatorgeo">
		
		<Button android:id="@+id/find"
			android:layout_margin="6px"
			android:layout_marginRight="2px"
			android:padding="0px"
			android:layout_width="0pt" 
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_weight="1"
			android:text="Find" />
		<Button android:id="@+id/use_current"
			android:layout_margin="6px"
			android:layout_marginLeft="2px"
			android:padding="0px"
			android:layout_width="0pt"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_weight="1"
			android:text="Use Current" />
	</LinearLayout>
</RelativeLayout>
